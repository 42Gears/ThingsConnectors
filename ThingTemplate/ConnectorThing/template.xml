<?xml version="1.0"?>
<template
    format="4"
    revision="1"
    name="Thing"
    minApi="7"
    minBuildApi="8"
    description="Creates a thing class">

    <dependency name="android-support-v4" revision="8" />

    <category value="Other" />

    <parameter
        id="className"
        name="Thing Name"
        type="string"
        constraints="class|unique|nonempty"
        default="ConnectorThing"
        help="The name of the thing class to create" />

    <thumbs>
        <thumb>template_blank_fragment.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>